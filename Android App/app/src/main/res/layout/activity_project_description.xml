<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.ProjectDescriptionActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="Project Name"
                android:textColor="@color/supportingTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/project_name_description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/mainTextColor"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:text="Project - Name - One" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/project_name_description_textview">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Epoch"
                        android:textAlignment="center"
                        android:textColor="@color/supportingTextColor" />

                    <TextView
                        android:id="@+id/epoch_project_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/mainTextColor"
                        android:textSize="22sp"
                        tools:text="9" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Accuracy"
                        android:textAlignment="center"
                        android:textColor="@color/supportingTextColor" />

                    <TextView
                        android:id="@+id/accuracy_project_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/mainTextColor"
                        android:textSize="22sp"
                        tools:text="0.987833" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loss"
                        android:textAlignment="center"
                        android:textColor="@color/supportingTextColor" />

                    <TextView
                        android:id="@+id/loss_project_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/mainTextColor"
                        android:textSize="22sp"
                        tools:text="0.39577" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Validation Accuracy"
                        android:textAlignment="center"
                        android:textColor="@color/supportingTextColor" />

                    <TextView
                        android:id="@+id/validation_accuracy_project_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/mainTextColor"
                        android:textSize="22sp"
                        tools:text="0.244325" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Validation Loss"
                        android:textAlignment="center"
                        android:textColor="@color/supportingTextColor" />

                    <TextView
                        android:id="@+id/validation_loss_project_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/mainTextColor"
                        android:textSize="22sp"
                        tools:text="0.244325" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/chart_textView_loss_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Loss Chart"
                android:textAlignment="center"
                android:textColor="@color/supportingTextColor"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_view_loss"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chart_textView_loss_description" />

            <TextView
                android:id="@+id/chart_textView_accuracy_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Accuracy Chart"
                android:textAlignment="center"
                android:textColor="@color/supportingTextColor"
                app:layout_constraintTop_toBottomOf="@+id/chart_view_loss" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_view_accuracy"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chart_textView_accuracy_description" />

            <TextView
                android:id="@+id/chart_textView_validation_loss_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Validation Loss Chart"
                android:textAlignment="center"
                android:textColor="@color/supportingTextColor"
                app:layout_constraintTop_toBottomOf="@+id/chart_view_accuracy" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_view_validation_loss"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chart_textView_validation_loss_description" />

            <TextView
                android:id="@+id/chart_textView_validation_accuracy_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Validation Accuracy Chart"
                android:textAlignment="center"
                android:textColor="@color/supportingTextColor"
                app:layout_constraintTop_toBottomOf="@+id/chart_view_validation_loss" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_view_validation_accuracy"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chart_textView_validation_accuracy_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>